<header>
    <h1>Ironhack Cinema</h1>
    <p>Click on the movie to check the showtimes!</p>
</header>
<section class="movie-image-link">
    {{#each movies}}
    <div class="movie-card">
        <img src={{this.image}} alt="">
        <h3>{{this.title}}</h3>
        <a href="/movies/{{this._id}}">See more</a>
    </div>
    {{/each}}
</section>